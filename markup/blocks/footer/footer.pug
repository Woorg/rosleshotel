mixin footer(data)
    footer.footer
        .footer__container.container
            .footer__top.flex
                a.footer__logo.logo(href="#")
                    img(src="assets/images/general/logo.png", alt="Гостиница Рослеспром")

                nav.footer__nav.nav.nav_secondary
                    ul.nav__list.flex
                        li.nav__item
                            a.nav__link(href="#") Номера и цены
                        li.nav__item
                            a.nav__link(href="#") Услуги
                        li.nav__item
                            a.nav__link(href="#") Спецпредложения
                        li.nav__item
                            a.nav__link(href="#") Отзывы
                        li.nav__item
                            a.nav__link(href="#") Контакты

                .footer__contacts
                    a.footer__phone.phone.phone_second(href="tel:+7(495) 660-84-50") +7(495) 660-84-50
                        != pugHelpers.Icon.call(locals, {iconName: 'phone-icon', className: 'phone__icon'})
                    a.footer__email(href="mailto:sales@rushotel.ru") sales@rushotel.ru

            .footer__bottom.flex
                .footer__copyright ©Copyright - Рослеспром 2020
                .footer__created Разработка и система бронирования:
                    a.footer__created-link(href="#") FrontDesk24
